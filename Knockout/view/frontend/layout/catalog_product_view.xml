<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add custom container -->
        <referenceContainer name="content">
            <container name="custom.container" htmlTag="div" htmlClass="custom-container" >
                <block class="Cp\Knockout\Block\Extra" name="custom.block" template="Cp_Knockout::product/view/extra.phtml" after="product.info.description">
                    <arguments>
                         <argument name="view_model" xsi:type="object">Cp\Knockout\Block\ViewModal</argument>
                     </arguments>
                </block>
            </container>
        </referenceContainer>
 </body>     
</page>
  
       