<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="cp_notification" resource="default" engine="innodb" comment="Notice Popup Table">
        <column xsi:type="int" name="notification_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title"/>
        <column xsi:type="text" name="description" nullable="false" comment="Description"/>
        <column xsi:type="varchar" name="customer_group" nullable="false" length="255" comment="Customer Group"/>
        <column xsi:type="smallint" name="status" nullable="false" default="0" comment="Status"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP" comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="notification_id"/>
        </constraint>
    </table>
    <table name="cp_notice" resource="default" engine="innodb" comment="Notice Popup Table">
        <column xsi:type="int" name="notice_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Notice ID"/>
        <column xsi:type="int" name="notice" nullable="false"  comment="Mark as Read Or Not"/>
        <column xsi:type="int" name="customer_id" nullable="false" comment="Customer Id"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP" comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="notice_id"/>
        </constraint>
    </table>
</schema>

 
